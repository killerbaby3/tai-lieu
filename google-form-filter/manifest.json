{
  "manifest_version": 3,
  "name": "Google Form Auto Filler",
  "version": "1.0",
  "description": "Tự động điền Google Form theo file options.json",
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://docs.google.com/forms/*",
    "https://forms.gle/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/forms/*",
        "https://forms.gle/*"
      ],
      "js": ["content.js"]
    }
  ]
}
